<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PasswordActivity"
    android:background="@color/white">

    <!--둘 중 하나 삭제-->

    <Button
        android:id="@+id/btn_back_password"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="58dp"
        android:background="@color/clear"
        android:drawableTop="@drawable/icon_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/montserrat"
        android:lineSpacingExtra="-10sp"
        android:textColor="@color/dark"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/setup_pw" />

    <EditText
        android:id="@+id/et_id_password"
        style="@style/Montserrat15Pt2"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/sign_et"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:textColorHint="@color/dark" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="-37dp"
        app:srcCompat="@drawable/icon_mail" />

    <Button
        android:id="@+id/btn_sendEmail"
        style="@style/Montserrat20Pt"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_login_rectangle"
        android:letterSpacing="0"
        android:text="@string/send_email"
        android:textAllCaps="false"
        app:backgroundTint="@color/dark"
        android:layout_marginTop="40dp"
        android:layout_marginStart="49dp"/>

    <View
        android:layout_width="355dp"
        android:layout_height="170dp"
        android:background="@drawable/box_login"
        android:layout_marginStart="28.5dp"
        android:layout_marginTop="-155dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_pass1"
            style="@style/Montserrat15Pt2"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="39dp"
            android:background="@drawable/sign_et"
            android:hint="@string/et_pass"
            android:inputType="textPassword"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:textColorHint="@color/dark"
            android:autofillHints="password"/>

        <ImageView
            android:id="@+id/icon_password"
            android:layout_width="20dp"
            android:layout_height="22.1810302734375dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="-41dp"
            app:srcCompat="@drawable/icon_padlock" />

        <EditText
            android:id="@+id/et_pass2"
            style="@style/Montserrat15Pt2"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="39dp"
            android:background="@drawable/sign_et"
            android:hint="@string/et_pass"
            android:inputType="textPassword"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:textColorHint="@color/dark"
            android:autofillHints="password"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="22.1810302734375dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="-41dp"
            app:srcCompat="@drawable/icon_padlock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResult_pass_fail"
            android:text="비밀번호 불일치"
            android:textColor="@color/dark"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResult_pass_success"
            android:text="비밀번호 일치"
            android:textColor="@color/dark"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_reset_pass"
            style="@style/Montserrat20Pt"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_login_rectangle"
            android:letterSpacing="0"
            android:text="@string/reset_pass"
            android:textAllCaps="false"
            app:backgroundTint="@color/dark"
            android:layout_marginTop="5dp"
            android:layout_marginStart="49dp"/>


        <View
            android:layout_marginTop="-245dp"
            android:layout_width="355dp"
            android:layout_height="270dp"
            android:background="@drawable/box_login"
            android:layout_marginStart="28.5dp"/>

    </LinearLayout>
</LinearLayout>