<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_search">

    <EditText
        android:id="@+id/et_food"
        style="@style/Montserrat20Pt"
        android:layout_width="326dp"
        android:layout_height="31dp"
        android:background="@drawable/box_rectangle"
        android:hint="@string/search_food"
        android:importantForAutofill="no"
        android:inputType="text"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="17dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@color/clear"
        android:fontFamily="@font/montserrat_bold"
        android:padding="0dp"
        android:text="@string/cancel"
        android:textColor="@color/dark"
        android:textSize="20sp"
        android:layout_marginTop="57dp" />

    <Button
        android:id="@+id/save_food"
        style="@style/Montserrat15Pt3"
        android:layout_width="377dp"
        android:layout_height="31dp"
        android:background="@drawable/btn_save_rectangle"
        android:padding="0dp"
        android:layout_marginLeft="-378dp"
        android:layout_marginTop="761dp"
        android:text="@string/save_food"
        android:textAllCaps="false"
        app:backgroundTint="@color/dark"/>


</LinearLayout>