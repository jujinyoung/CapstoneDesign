<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity"
    android:background="@color/white">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="58dp"
        android:background="@color/clear"
        android:drawableTop="@drawable/icon_back" />

    <TextView
        android:id="@+id/Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="6dp"
        style="@style/Montserrat25Pt2"
        android:lineSpacingExtra="-10sp"
        android:text="@string/login_title" />

    <TextView
        android:id="@+id/Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="3dp"
        style="@style/Montserrat25Pt2"
        android:lineSpacingExtra="-10sp"
        android:text="@string/login_title2" />

    <EditText
        android:id="@+id/et_id"
        style="@style/Montserrat15Pt2"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/sign_et"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingLeft="60dp"
        android:textColorHint="@color/dark" />

    <ImageView
        android:id="@+id/icon_mail"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="-37dp"
        app:srcCompat="@drawable/icon_mail" />

    <EditText
        android:id="@+id/et_pass"
        style="@style/Montserrat15Pt2"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/sign_et"
        android:hint="@string/et_pass"
        android:inputType="textPassword"
        android:paddingLeft="60dp"
        android:textColorHint="@color/dark" />

    <ImageView
        android:id="@+id/icon_password"
        android:layout_width="20dp"
        android:layout_height="22.1810302734375dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="-41dp"
        app:srcCompat="@drawable/icon_padlock" />

    <TextView
        android:id="@+id/btn_forgot_pw"
        style="@style/Montserrat15Pt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="40dp"
        android:letterSpacing="0"
        android:padding="0dp"
        android:textAllCaps="false"
        android:textColor="@color/cool_grey"
        android:text="@string/forgot_password" />

    <TextView
        android:id="@+id/btn_register"
        style="@style/Montserrat15Pt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0"
        android:padding='0dp'
        android:text="@string/login_create_account"
        android:layout_marginTop="-20dp"
        android:textColor="@color/cool_grey"
        android:layout_marginLeft="234dp"/>


    <Button
        android:id="@+id/btn_login"
        style="@style/Montserrat20Pt"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_login_rectangle"
        android:letterSpacing="0"
        android:text="@string/btn_login"
        android:textAllCaps="false"
        app:backgroundTint="@color/dark"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="49dp"/>

    <View
        android:layout_width="355dp"
        android:layout_height="305dp"
        android:layout_marginLeft="28.5dp"
        android:layout_marginTop="-285.5dp"
        android:background="@drawable/box_login"></View>

</LinearLayout>
